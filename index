    <script>
        window.addEventListener('scroll', function() {
            const gridItems = document.querySelectorAll('.grid-item');
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            const windowHeight = window.innerHeight;
            gridItems.forEach((item) => {
                const itemTop = item.getBoundingClientRect().top + scrollTop;
                const distance = (itemTop - scrollTop) - windowHeight;
                if (distance > 0) {
                    const fadeDistance = 500;
                    const opacity = Math.max(0, 1 - (distance / fadeDistance));
                    item.style.opacity = opacity;
                } else {
                    item.style.opacity = 1;
                }
            });
        });
        document.addEventListener('dblclick', function(e) {
            if (e.target.closest('.grid-item')) {
                const item = e.target.closest('.grid-item');
                const newText = prompt('Inserisci nuovo testo:');
                if (newText) {
                    let textEl = item.querySelector('.grid-text');
                    if (!textEl) {
                        const content = item.querySelector('.grid-content') || item;
                        textEl = document.createElement('p');
                        textEl.className = 'grid-text';
                        content.innerHTML = '';
                        content.appendChild(textEl);
                    }
                    textEl.textContent = newText;
                }
            }
        });
        document.addEventListener('contextmenu', function(e) {
            if (e.target.closest('.grid-item')) {
                e.preventDefault();
                const item = e.target.closest('.grid-item');
                const newColor = prompt('Inserisci colore (es: #ff1493, red, rgb(255,0,0)):');
                if (newColor) {
                    item.style.backgroundColor = newColor;
                }
            }
        });
    </script>
